{
    //////////////////////////////////////////////////////////////
    // Editor Configuration                                     //
    //////////////////////////////////////////////////////////////

    "editor.fontFamily": "Inconsolata, Consolas, 'Courier New', monospace",
    "editor.minimap.enabled": false,
    "editor.rulers": [100],
    "editor.formatOnSave": true,
    "editor.wordBasedSuggestions": false,
    "editor.suggest.showWords": false,
    "editor.suggestSelection": "first",
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },

    //////////////////////////////////////////////////////////////
    // Misc Configuration                                       //
    //////////////////////////////////////////////////////////////

    "csharp.referencesCodeLens.enabled": false,
    "extensions.ignoreRecommendations": true,
    "window.zoomLevel": 0,
    // Disables folder collapsing when there's no file in between
    "explorer.compactFolders": false,
    "remove-empty-lines.allowedNumberOfEmptyLines": 1,
    "output.smartScroll.enabled": false,
    "cSpell.userWords": [
        "Andculture",
        "auditable",
        "Dtos",
        "Ecommerce",
        "NFPA",
        "Signup",
        "andculturecode",
        "endregion",
        "nameof",
        "pojo",
        "popd",
        "pushd"
    ],
    "cSpell.ignorePaths": [
        "**/package-lock.json",
        "**/node_modules/**",
        "**/vscode-extension/**",
        "**/.git/objects/**",
        ".vscode",
        ".vscode-insiders",
        "**/cultures/*.ts"
    ],
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "codesnap.realLineNumbers": true,
    "vsicons.dontShowNewVersionMessage": true,
    "google-translate.firstLanguage": "es-es",

    //////////////////////////////////////////////////////////////
    // TSLint Extension                                         //
    //////////////////////////////////////////////////////////////
    "tslint.autoFixOnSave": true,
    "typescript.format.insertSpaceAfterOpeningAndBeforeClosingTemplateStringBraces": true,
    "typescript.format.insertSpaceAfterTypeAssertion": true,
    "typescript.preferences.importModuleSpecifier": "non-relative",
    "typescript.updateImportsOnFileMove.enabled": "always",

    //////////////////////////////////////////////////////////////
    // GitLens Extension                                        //
    //////////////////////////////////////////////////////////////
    "gitlens.advanced.messages": {
        "suppressShowKeyBindingsNotice": true
    },
    "gitlens.views.fileHistory.enabled": true,
    "gitlens.views.lineHistory.enabled": true,

    //////////////////////////////////////////////////////////////
    // Trailing-Spaces Extension                                //
    //////////////////////////////////////////////////////////////
    "trailing-spaces.trimOnSave": true,

    //////////////////////////////////////////////////////////////
    // TODO Highlight                                           //
    //////////////////////////////////////////////////////////////
    "todohighlight.keywords": [
        {
            "text": "NOTE",
            "color": "#000000",
            "backgroundColor": "yellow",
            "overviewRulerColor": "grey"
        },
        {
            "text": "BSCOTT",
            "color": "#000000",
            "backgroundColor": "yellow",
            "overviewRulerColor": "grey"
        }
    ],

    //////////////////////////////////////////////////////////////
    // Terminal                                                 //
    //////////////////////////////////////////////////////////////
    "terminal.integrated.shell.windows": "C:\\Program Files\\Git\\bin\\bash.exe",
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.allowChords": false,

    //////////////////////////////////////////////////////////////
    // Document This                                            //
    //////////////////////////////////////////////////////////////
    "docthis.includeMemberOfOnClassMembers": false,
    "docthis.includeMemberOfOnInterfaceMembers": false,
    "docthis.includeTypes": false
}
