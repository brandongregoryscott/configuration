{
    //////////////////////////////////////////////////////////////
    // Editor/Misc Configuration                                //
    //////////////////////////////////////////////////////////////

    "csharp.referencesCodeLens.enabled": false,
    "editor.fontFamily": "Inconsolata, Consolas, 'Courier New', monospace",
    "editor.minimap.enabled": false,
    "editor.renderWhitespace": "none",
    "editor.rulers": [100],
    "extensions.ignoreRecommendations": true,
    "window.zoomLevel": 0,

    //////////////////////////////////////////////////////////////
    // TSLint Extension                                         //
    //////////////////////////////////////////////////////////////
    "tslint.autoFixOnSave": true,
    "typescript.format.insertSpaceAfterOpeningAndBeforeClosingJsxExpressionBraces": false,
    "typescript.format.insertSpaceAfterOpeningAndBeforeClosingTemplateStringBraces": true,
    "typescript.format.insertSpaceAfterTypeAssertion": true,
    "typescript.preferences.importModuleSpecifier": "non-relative",
    "typescript.updateImportsOnFileMove.enabled": "always",

    //////////////////////////////////////////////////////////////
    // GitLens Extension                                        //
    //////////////////////////////////////////////////////////////
    "gitlens.advanced.messages": {
        "suppressShowKeyBindingsNotice": true
    },
    "gitlens.views.fileHistory.enabled": true,
    "gitlens.views.lineHistory.enabled": true,

    //////////////////////////////////////////////////////////////
    // PostCSS Sorting Extension                                //
    //////////////////////////////////////////////////////////////
    "postcssSorting.config": {
        "order": [
            "at-rules",
            "declarations",
            "rules",
            "custom-properties",
        ],
        "properties-order": [
            "border",
            "display",
            "margin",
            "padding-top",
            "padding-right",
            "padding-bottom",
            "padding-left",
            "left",
            "position",
            "right",
            "top",
            "z-index",
            "bottom",
            "background-color",
            "color",
            "border-color",
            "font-family",
            "font-style",
            "font-weight",
            "font-size",
            "text-transform",
            "box-shadow",
            "content",
            "transform",
            "transition",
        ],
        "unspecified-properties-position": "bottom",
    },
    "postcssSorting.showErrorMessages": true,

    //////////////////////////////////////////////////////////////
    // CSSComb Extension                                        //
    //////////////////////////////////////////////////////////////
    "csscomb.formatOnSave": false,
    "csscomb.ignoreFilesOnSave": [],
    "csscomb.preset": {
        "remove-empty-rulesets": true,
        "always-semicolon": true,
        "color-case": "lower",
        "quotes": "double",
        "block-indent": "    ",
        "tab-size": true,
        "space-before-colon": "",
        "space-after-colon": " ",
        "space-before-combinator": " ",
        "space-after-combinator": " ",
        "space-between-declarations": "\n",
        "space-before-opening-brace": " ",
        "space-after-opening-brace": "\n",
        "space-before-selector-delimiter": "",
        "space-before-closing-brace": "\n",
        "strip-spaces": true,
        "vendor-prefix-align": true
    },
    "csscomb.supportEmbeddedStyles": true,
    "csscomb.syntaxAssociations": {},

    //////////////////////////////////////////////////////////////
    // JavaScript (ES6) code snippets Extension                 //
    //////////////////////////////////////////////////////////////
    "emmet.includeLanguages": {
        "javascript": "javascriptreact",
        "typescript": "typescript",
        "typescriptreact": "typescriptreact",
        "jsx-sublime-babel-tags": "javascriptreact"
    },
    "emmet.triggerExpansionOnTab": true,

    //////////////////////////////////////////////////////////////
    // Trailing-Spaces Extension                                //
    //////////////////////////////////////////////////////////////
    "trailing-spaces.trimOnSave": true,
}